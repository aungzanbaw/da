<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
        <p id="notice"><%= flash[:notice] %></p>
  </div>
<% end %>

<h1>Orders</h1>

<table class="dt table table-striped table-bordered">
  <thead>
    <tr>
      <th>Vocher</th>
      <th>Customer</th>
      <th>Delivery</th>
      <th>Gate</th>
      <th>Remark</th>
      <th>Payment</th>
      <th>Date</th>
      <th>Time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <% if @orders %>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.vocher, order %></td>
          <td><%= link_to order.customer.name, customer_path(order.customer) %></td>
          <td><%= order.delivery %></td>
          <td><%= order.gate %></td>
          <td><%= order.remark %></td>
          <td><%= order.payment %></td>
          <td><%= order.created_at.to_date %></td>
          <td><%= order.created_at.strftime("%H:%M:%S") %></td>
          <td>
            <%= link_to 'Edit', edit_order_path(order) %>
            <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="9">No incoming order yet</td>
      </tr>
    <% end %>
  </tbody>
</table>
